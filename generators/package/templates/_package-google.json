{
    "name": "<%= name %>",
    "version": "<%= version %>",
    "main": "src/index.js",
    "types": "src/index.d.js",
    "license": "MIT",
    "scripts": {
        "build": "yarn run lint && yarn run test",
        "lint": "tslint --fix src/**/*.ts",
        "clean": "rimraf ./.build",
        "dev": "yarn run sls-offline",
        "prebuild": "yarn run clean",
        "predev": "yarn run clean",
        "test": "jest -c ../../jest.json --coverage",
        "sls-deploy":
            "yarn run build && node --require ../../dotenv.js ../../node_modules/serverless/bin/serverless deploy -v",
        "sls-remove":
            "node --require ../../dotenv.js  ../../node_modules/serverless/bin/serverless remove -v",
        "sls-logs":
            "node --require ../../dotenv.js  ../../node_modules/serverless/bin/serverless logs -v -t",
        "sls-info":
            "node --require ../../dotenv.js  ../../node_modules/serverless/bin/serverless info",
        "sls-package":
            "cross-var \"rimraf ../../output/packages/$npm_package_name && mkdir -p ../../output/packages/$npm_package_name && node --require ../../dotenv.js  ../../node_modules/serverless/bin/serverless package --package ../../output/packages/$npm_package_name && tar -C ../../output/packages -cvzf ../../output/packages/$npm_package_name-$npm_package_version.tar.gz $npm_package_name\""
<% if (eventTriggerType == "http") { -%>
        ,
        "sls-perf":
            "cross-var \"rimraf ../../output/artillery/$npm_package_name && mkdir -p ../../output/artillery/$npm_package_name && node ../../node_modules/artillery/bin/artillery run -o ../../output/artillery/$npm_package_name/artillery-report.json artillery.yml\"",
        "sls-perf-report":
            "cross-var \"node ../../node_modules/artillery/bin/artillery report ../../output/artillery/npm_package_name/artillery-report.json -o ../../output/artillery/npm_package_name/artillery-report.html\""
<% } -%>
    }
}
